---
import Default from '@astrojs/starlight/components/MarkdownContent.astro';
import { Aside, Icon } from '@astrojs/starlight/components';

const { starlightRoute } = Astro.locals;
---

<Default>
  {starlightRoute.entry.data.wip && (
    <p class="sl-flex">
      <Icon name="warning" size="1.5em" color="var(--sl-color-orange-high)" />
      <span>
        <b>Work in Progress:</b>
        This content is incomplete; you can help by <a href={starlightRoute.editUrl?.href}>expanding it</a>
      </span>
    </p>
  )}

  <slot />
</Default>


<!-- Styles from Starlight's internal ContentNotice component -->
<style>
	@layer starlight.core {
		p {
			border: 1px solid var(--sl-color-orange);
			padding: 0.75em 1em;
			background-color: var(--sl-color-orange-low);
			color: var(--sl-color-orange-high);
			width: max-content;
			max-width: 100%;
			align-items: center;
			gap: 0.75em;
			font-size: var(--sl-text-body-sm);
			line-height: var(--sl-line-height-headings);
      margin-bottom: 2rem;
		}
	}
</style>
